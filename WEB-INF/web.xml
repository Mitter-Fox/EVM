<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>HomeServ</servlet-name>
        <servlet-class>HomeServ</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>contactserv</servlet-name>
        <servlet-class>contactserv</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminServ</servlet-name>
        <servlet-class>AdminServ</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewRegServ</servlet-name>
        <servlet-class>NewRegServ</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateRegServ</servlet-name>
        <servlet-class>UpdateRegServ</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewServ</servlet-name>
        <servlet-class>ViewServ</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>otp_validate</servlet-name>
        <servlet-class>otp_validate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServ</servlet-name>
        <url-pattern>/HomeServ</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>contactserv</servlet-name>
        <url-pattern>/contactserv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminServ</servlet-name>
        <url-pattern>/AdminServ</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>host</param-name>
        <param-value>smtp.gmail.com</param-value>
    </context-param>
    <context-param>
        <param-name>port</param-name>
        <param-value>587</param-value>
    </context-param>
    <context-param>
        <param-name>user</param-name>
        <param-value>evoting.subarna@gmail.com</param-value>
    </context-param>
    <context-param>
        <param-name>pass</param-name>
        <param-value>evoting2345</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>NewRegServ</servlet-name>
        <url-pattern>/NewRegServ</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateRegServ</servlet-name>
        <url-pattern>/UpdateRegServ</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewServ</servlet-name>
        <url-pattern>/ViewServ</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>otp_validate</servlet-name>
        <url-pattern>/otp_validate</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
